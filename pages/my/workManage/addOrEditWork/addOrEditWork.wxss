@import '/template/productItem/productItem.wxss';

.container{
  background: #fff;
  overflow-x: hidden;
}
.pic{
  font-size: 28rpx;
  color:#000;
  padding: 10rpx 6px;
}
.box{
  margin: 0 6px;
}
page{
  background: #fff;
}
.pic-box{
  display: -webkit-flex;
  flex-wrap: wrap;
}
.pic-max-item{
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  flex: 0 0 66.66%;
  background: #f0eff5;
  box-sizing: border-box;
}
.pic-box-item,.pic-min-item{
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  flex: 0 0 33.33%;
  background: #f0eff5;
  box-sizing: border-box;
}
.border-r{
  border-right: 1px solid #fff;
}
.border-b{
  border-bottom: 1px solid #fff;
}
.collect{
  width: 56rpx;
  height: 56rpx;
}

textarea{
  height: 60px;
}
.list-item{
  margin-left: 6px;
  margin-right: 6px;
}
.product{
  display: -webkit-flex;
  background: #fdfdfd;
  padding: 22rpx 20rpx;
  align-items: center;
  position: relative;
}
.product view{
  flex: 0 0 78%;
}

.submit-btn{
  display: -webkit-flex;
  background: #fdfdfd;
  align-items: center;
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index:9999;
}
.submit-btn button{
  width: 100%;
  border-radius: 0;
}

