/* pages/address/addressList/addressList.wxss */
.addrList{
  margin-top: 10rpx;
  width: 100%;
}
.addr-item{
  display: -webkit-flex;
  align-items: center;
  background: #fdfdfd;
  font-size: 32rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f1f1f1;
  justify-content:space-between;
  width:750rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.delete-btn {
  width:100rpx;
  line-height:132rpx;
  text-align:center;
  background:#e64340;
  font-size:24rpx;
  color:#fff;
}

.edit{
  align-items: center;
  padding: 0 30rpx 0 30rpx;
}
.edit text{
  color: #888;
  font-size: 24rpx;
}
.collect{
  margin-right: 0;
  width: 36rpx;
  height: 36rpx;
}
.basic-info{
  font-size: 30rpx;
  padding-bottom: 10rpx;
}
.middle{
  flex: 0 0 75%;
}
.right{
  display: -webkit-flex;
  align-items: center;
}
.icon_none{
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
}
.icon_none image{
  width: 100%;
  height: 100%;
}
.product{
  display: -webkit-flex;
  background: #fdfdfd;
  padding: 23rpx 20rpx;
  align-items: center;
}
.product image:first-child{
  padding-right: 36rpx;
}
.product view{
  flex: 0 0 76%;
  font-size: 36rpx;
}
.add{
  width: 60rpx;
  height: 60rpx;
}
.a-goods-conts{
  display:flex;
  justify-content:space-between;
  width:850rpx;
  box-sizing:border-box;
  transition:margin-left 0.2s ease-in-out;
  background:#fdfdfd;
}

.a-gooods{
    width: 100%;
    overflow: hidden;
}