.label{
  color: #000;
  font-size: 28rpx!important;
  font-weight: bold;
}

/*搜索框*/
.search_view {
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index:999;
}
.search_bar {
  display: flex;
  flex-direction: row;
  position: relative;
  width: 90%;
  height: 26px;
  border-radius: 20px;
  align-items: center;
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: -webkit-box;
  -webkit-box-align: center;
  background-color:#fdfdfd;
}
.search_box {
  display: -webkit-box;
  display:-webkit-box;
  -webkit-box-align:center;
  -webkit-box-pack:center;
  font-size: 26rpx;
}
.search_bar image {
  width: 12px;
  height: 12px;
  z-index: 99;
  padding-right: 4px;
  vertical-align:-1px;
}

/*title*/
.title{
  font-size: 32rpx;
  color: #686868;
  padding-left: 20rpx;
  margin-bottom: 30rpx;
}
.collect{
  width: 32rpx;
  height: 32rpx;
}

/*瀑布流布局*/
.content{
  margin: 16rpx 20rpx;
  text-align: justify;
}
.item{
  background-color: #fff;
  margin: 1%; 
  margin-bottom: 14rpx;
  width: 100%;
  box-shadow:0 2px 4px #ddd;
  border-radius: 6rpx;
}
.item-ava{
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}
.item-img{
  width: 100%
}
.item-title{
  font-size: 24rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  color: #1e1e1e;
  margin: 14rpx;
}
.item-title-box{
  display: flex;
}
.left,.right{
  display: inline-block;
  vertical-align: top;
  width: 49%;
}
.right{
  float: right;
}