/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #f4f8fb;
}
page{
  position: relative;
  min-height: 100%;
  background-color: #f4f8fb;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
.go{
  width: 42rpx;
  height: 36rpx;
}
/*头像*/
.avator{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
/*收藏，点赞*/
.collect{
  width: 46rpx;
  height: 46rpx;
  margin-right: 10rpx;
}
/*固定在底部按钮*/
.product{
  position: fixed;
  bottom: 0;
  width: 100%;
}
.product button{
  border-radius: 0;
}

.slide-image{
   width: 100%;
  /* height: 100%;  */
}
.price{
  padding: 10rpx 0;
}
.price label:first-child{
  color: #f8371e;
  font-size: 40rpx;
}
.price label:last-child{
  padding-left: 20rpx;
  text-decoration: line-through;
  color: #9d9d9d;
}

.goods-thumbnail{
  width:220rpx;
  height:220rpx;
}
.label-text{
  font-size: 34rpx;
  color: #E64340;
}

.toast-bg {  
  position: fixed;  
  top: 0;  
  bottom: 0;  
  z-index: 999999;  
  width: 100%;  
  height: 100%;  
  background: rgba(0, 0, 0, .2);  
}
/*水平居中必备样式*/  
.toast-center {  
  position: fixed;  
  z-index: 9999999;  
  width: 100%;  
  height: 100%;  
  text-align: center;  
}  
/*垂直居中必备样式*/  
.toast-center::after{  
  content: '';  
  display: inline-block;  
  width: 0;  
  height: 100%;  
  vertical-align: middle;  
}

/*showToast 公用黑色提示*/  
.toast {  
  display: inline-block;  
  padding: 20rpx 40rpx;  
  max-width: 600rpx;  
  font-size: 28rpx;  
  color: #fff;  
  background: rgba(0, 0, 0, .5);  
  border-radius: 10rpx;  
  text-align: center;  
}  
.clearfix:before,.clearfix:after {
  content: "";
  display: block;
  clear: both;
}
.clearfix {
   zoom: 1;
}

/*showAlert 公用弹窗提示*/  
.toast-alert {  
  display: inline-block;  
  width: 520rpx;  
  background: #fff;  
  border-radius: 10rpx;  
  text-align: center;  
}
.toast-alert-title {
  padding: 70rpx 60rpx;
  font-size: 32rpx;  
  color: #333;  
  text-align: center;  
}
.toast-alert-button {
  padding: 20rpx 0;
  font-size: 28rpx;  
  text-align: center;  
  border-top: 1rpx solid #ebebeb;
}
.toast-alert-button view{
  font-size: 30rpx;  
  color: #333;  
  background: #e6e6e6;  
  width:192rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;  
  text-align: center;  
  display: inline-block;
  margin-right: 32rpx;
  border:none;
}
.toast-alert-button view.sub{
  color: #fff;  
  background: #2E77BD;  
  margin-right: 0x;
  margin-left: 32rpx;
}

.wenxin_tip{
  text-align: center;
  font-size: 30rpx;
  color: #666;
  padding: 0 20%;

  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

/*Swiper*/
.swiper-container {
  width:100%;
  position:relative;
}
.swiper_box{
  width:100%;
}
.swiper-container .dots{
  position:absolute;
  left:0;
  right:0;
  bottom:20rpx;
  display:flex;
  justify-content:center;
}
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #000;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .3;
}
.swiper-container .dots .dot.active{  
  opacity: .6;
}

