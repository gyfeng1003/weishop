<template name="emptyText">
  <view style="text-align: center;padding-top: {{top}}">
    <image style='width: 200rpx;height: 200rpx;' src='http://image.235shanghai.com/fashionMiniPrograms-emptyText.png'></image>
    <view style='font-size: 28rpx;color: #666;'>{{tip}}</view>
  </view>
</template>

<template name="loadFail">
  <view bindtap="resetTry" 
  style="font-size: 28rpx;color: #666;text-align: center;padding: 40rpx 0;">
    加载失败，请点击重试！
  </view>
</template>

<template name="loading">
  <view bindtap="resetTry" 
  style="font-size: 28rpx;color: #666;text-align: center;padding: 40rpx 0;">
    加载中...
  </view>
</template>

<template name="listEmpty">
  <view style="width:100%;text-align: center;padding-top:20px;font-size:28rpx;color:#666;">
    {{text}}
  </view>
</template>