.list-item {
  display: -webkit-flex;
  align-items: center;
  position: relative;
  width: 100%;
  height: 108rpx;
  padding:0 20rpx;
  vertical-align:middle;
  background-color: #fdfdfd;
  overflow-x: hidden;
  box-sizing: border-box;
}

.list-item image{
  width:80rpx;
  height:80rpx;
  border-radius:50%;
  display: block;
}


.inline{
  display: inline-block;
  padding:0 30rpx;
  color:#888;
}
.name{
  padding-bottom:0;
  font-size:28rpx;
}
.work{
  font-size: 26rpx;
}
.followBtn{
  position:absolute;
  right:26rpx;
  top: 50%;
  transform: translateY(-50%);
}

button{
  color: #aaa;
  font-size: 28rpx;
  line-height: 1.6;
  border: 1px solid #aaa;
}
